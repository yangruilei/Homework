<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="@dimen/dp_256"
            android:layout_height="@dimen/dp_82"
            android:layout_marginLeft="@dimen/dp_59"
            android:layout_marginTop="@dimen/dp_89"
            android:src="@drawable/public_login_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_69"
            android:layout_marginTop="@dimen/dp_63"
            android:layout_marginRight="@dimen/dp_35"
            android:hint="请输入手机号"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_image" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_54"
            android:layout_marginRight="@dimen/dp_46"
            android:text="获取验证码"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_image" />

        <EditText
            android:id="@+id/login_et_verifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_74"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_35"
            android:hint="请输入验证码"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_et_phone" />

        <Button
            android:id="@+id/login_bt_login"
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="36dp"
            android:text="登录"
            android:textSize="17sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_et_verifi" />

        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_15"
            android:text="*未注册的手机号将自动注册"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_bt_login" />

        <TextView
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="39dp"
            android:text="密码登录"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_bt_login" />

        <TextView
            android:id="@+id/login_tv_login"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_156"
            android:layout_marginTop="@dimen/dp_137"
            android:text="第三方登录"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_bt_login" />

        <ImageView
            android:id="@+id/login_img_weixin"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_114"
            android:layout_marginTop="@dimen/dp_37"
            android:src="@drawable/public_ic_wechat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_tv_login" />

        <ImageView
            android:id="@+id/login_img_qq"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_119"
            android:src="@drawable/public_ic_qq"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_tv_login" />

        <TextView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_111"
            android:layout_marginTop="@dimen/dp_12"
            android:text="微信登录"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img_weixin" />

        <TextView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_110"
            android:text="qq登录"
            android:textSize="10sp"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_img_weixin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>